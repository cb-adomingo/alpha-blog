<div class="card card-body bg-light">
  <h4 class="center"><strong><%= @article.title %></strong></h4>
  <% if @article.user %>
  <small class="center">by <strong><%= link_to @article.user.username, user_path(@article.user) %></strong></small>
  <% end %>
  <hr>
  <%= simple_format(@article.description) %>
  <hr>
  <div class="articles-action center">
    <% if logged_in && current_user == @article.user %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary" %>
        <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class: "btn btn-danger" %>
    <% end %>
    <%= link_to "Back to list", articles_path, class: "btn btn-success" %>
  </div>
</div>
