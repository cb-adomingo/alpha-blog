<h1 class="display-6 center mt-4">Alpha Bloggers</h1>
<%= will_paginate list_classes: %w(pagination justify-content-center mt-4) %>
<% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="col-md-4 offset-md-4 card card-body bg-light center">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="article-title"><%= link_to user.username, user_path(user) %></li>
                <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                <% if current_user.admin? %>
                    <li><small><%= link_to "Delete User", user_path(user), method: :delete,
                        data: { confirm: :"Are you sure you want to delete this user and all his/her articles?" } %></small></li>
                <% end %>
            </div>
        </div>
    </ul>
<% end %>
<%= will_paginate list_classes: %w(pagination justify-content-center mt-4) %>
