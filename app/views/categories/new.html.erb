<h1 class="display-6 center mt-4">New Category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
<div class="form-group row">
  <div class="col-sm-2 col-form-label">
  <%= f.label :name %>
  </div>
  <div class="col-sm-10">
  <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-2 offset-sm-2 col-sm-10">
  <%= f.submit class: "btn btn-primary mb-2" %>
  </div>
</div>
<div class="col-sm-2 offset-sm-2 col-sm-10">
  <%= link_to "Back to list", articles_path %>
</div>
<% end %>
